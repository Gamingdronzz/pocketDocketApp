<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.pocket_docket">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="POCKET DOCKET"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AdminDashboardActivity"
            android:label="DASHBOARD"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RegisterMembersActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ViewMembersActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DeveloperDashboardActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="DASHBOARD"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>